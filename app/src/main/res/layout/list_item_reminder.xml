<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <ImageView
      android:id="@+id/reminder_list_thumbnail"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="6dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="6dp"
      android:contentDescription="@string/thumbnail"
      android:scaleType="centerInside"
      tools:src="@drawable/simple_calendar_icon" />

    <RelativeLayout
        android:id="@+id/reminder_list_text_layout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="66dp">

        <TextView
            android:id="@+id/reminder_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="20sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/reminder_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reminder_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="20sp"
            tools:text="Date" />

        <TextView
            android:id="@+id/reminder_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="118dp"
            android:maxLines="1"
            android:textSize="18sp"
            tools:text="Time" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="@string/delete" />

    </RelativeLayout>
</RelativeLayout>
